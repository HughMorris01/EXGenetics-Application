<%- include('partials/head') %> <%- include('partials/header') %>
<main class="content-wrapper">
  
  <section class="hero-section contact-hero">
    <div class="container">
      <h1 class="hero-title">Contact Us</h1>
      <p class="hero-intro-text">
        Whether you're a neighbor with a question or a professional looking to collaborate, we're ready to connect.
      </p>
    </div>
  </section>

  <section class="partnership-portal">
    <div class="container">
      <div class="portal-card">
        <h2>Partnership Portal</h2>
        
        <form action="/contact" method="POST" class="portal-form">
          <div style="display: none;">
            <label for="honeypot">Leave empty:</label>
            <input type="text" name="honeypot" id="honeypot" tabindex="-1" autocomplete="off">
          </div>

          <div class="form-row">
            <input type="text" name="name" placeholder="Your Name" required />
            <input type="email" name="email" placeholder="Email Address" required />
          </div>
          
          <div class="form-row">
            <input type="tel" name="phone" placeholder="Phone (Optional)" />
            <input type="text" name="business" placeholder="Business / Organization (Optional)" />
          </div>

          <select name="partnerType" required>
            <option value="" disabled selected>I am a...</option>
            <option value="dispensary">Licensed Dispensary (Wholesale)</option>
            <option value="vendor">Local Vendor / Supplier</option>
            <option value="community">Community Member</option>
            <option value="other">Other</option>
          </select>

          <textarea name="message" rows="5" placeholder="How can we grow together?" required></textarea>

          <button type="submit" class="btn-portal">Send Message</button>
        </form>
      </div>
    </div>
  </section>
</main>
<%- include('partials/footer') %>