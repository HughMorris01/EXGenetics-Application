<%- include('partials/head') %> 
<%- include('partials/header') %>

<main>
  <section class="hero-section contact-hero">
  </section>

  <section class="partnership-portal container">
      <div class="portal-card portal-light">
        <h1 class="contact-us">
        PARTNERSHIP PORTAL
      </h1>
      <p class="intro">
        Excelsior Genetics is actively building a network of elite partners and welcomes inquiries from one and all. Licensed dispensaries, local vendors, and community advocates are encouraged to reach out.
      </p>

        <form action="/contact" method="POST" class="portal-form" id="contact-form">
          <div style="display: none">
            <input
              type="text"
              name="honeypot"
              id="honeypot"
              tabindex="-1"
              autocomplete="off"
            />
          </div>

          <div class="form-row">
            <input type="text" name="name" placeholder="Your Name" required />
            <input
              type="email"
              name="email"
              placeholder="Email Address"
              required
            />
          </div>

          <div class="form-row">
            <input type="tel" name="phone" placeholder="Phone (Optional)" />
            <input
              type="text"
              name="business"
              placeholder="Business / Organization (Optional)"
            />
          </div>

          <div class="select-wrapper">
            <select name="partnerType" required>
              <option value="" disabled selected>I am a...</option>
              <option value="dispensary">
                Licensed Dispensary (Wholesale)
              </option>
              <option value="vendor">Local Vendor / Supplier</option>
              <option value="community">Community Member</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="textarea-container">
            <textarea
              name="message"
              rows="5"
              placeholder="How can we grow together?"
              maxlength="1000"
              required
            ></textarea>
            <div id="char-counter" class="char-counter">
              1000 characters remaining
            </div>
          </div>

          <input type="hidden" name="recaptcha_token" id="recaptcha_token" required />

          <button type="submit" class="btn-portal" id="submit-btn">Send Message</button>
        </form>
      </div>
  </section>

  <div id="status-modal" class="modal-overlay">
    <div class="modal-content">
      <div id="modal-icon-container" class="modal-icon"></div>

      <h3 id="modal-title">Status</h3>
      <p id="modal-message">Processing your request...</p>

      <button id="close-modal" class="btn-modal">Close</button>
    </div>
  </div>
</main>

<%- include('partials/footer') %>