<header>
  <% if (typeof currentPath !== 'undefined' && currentPath === '/') { %>
    <div class="petition-alert-bar">
      <div class="container alert-flex">
        <span class="alert-text">
          <i class="fa-solid fa-bullhorn"></i> 
          <strong>Community Action:</strong> Help us to bring the 1000 Islands its first cannabis dispensary!
        </span>
        <a href="/retail#petition" class="alert-btn">Sign the Petition <i class="fa-solid fa-arrow-right"></i></a>
      </div>
    </div>
  <% } %>

  <div class="header-container">
    <a href="/" class="header-logo-link">
      <img
        src="/assets/logo_clear_bg.png"
        alt="Excelsior Genetics Logo"
        class="logo"
      />
    </a>

    <div class="menu-toggle" id="mobile-menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>

    <nav class="nav-menu">
      <ul>
        <li>
          <a
            href="/about"
            class="<%= currentPath === '/about' ? 'active-link' : '' %>"
            >Our Story</a
          >
        </li>
        <li>
          <a
            href="/cultivation"
            class="<%= currentPath === '/cultivation' ? 'active-link' : '' %>"
            >Cultivation</a
          >
        </li>
        <li>
          <a
            href="/strains"
            class="<%= currentPath === '/strains' ? 'active-link' : '' %>"
            >Strains</a
          >
        </li>
        <li>
          <a
            href="/retail"
            class="<%= currentPath === '/retail' ? 'active-link' : '' %>"
            >Retail</a
          >
        </li>
        <li>
          <a
            href="/contact"
            class="<%= currentPath === '/contact' ? 'active-link' : '' %>"
            >Contact</a
          >
        </li>
      </ul>
    </nav>
  </div>
</header>
